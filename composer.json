{
  "name": "kschu91/largest-remainder-method",
  "description": "A PHP implementation of the largest remainder method algorithm. This method is the most common way to get rid of rounding issues when working with rounded percentage values.",
  "type": "library",
  "require": {
    "php": ">=7.3",
    "customergauge/remainder": "^1.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.6"
  },
  "authors": [
    {
      "name": "Kevin Schu",
      "email": "kevin.schu@aoe.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Aeq\\LargestRemainder\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Aeq\\LargestRemainder\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

  },
  "config": {
    "preferred-install": {
      "*": "dist"
    }
  }
}
